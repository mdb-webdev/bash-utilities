#   ------------------------------------------------------------
#   1.  CHECK FOR, REFERENCE, AND SOURCE .bashrc FILE
#   ------------------------------------------------------------

[[ -s ~/.bashrc ]] && source ~/.bashrc

# # #     - .bashrc holds most of the customizations, including
# # #       prompt customizations, and aliases.


#   ------------------------------------------------------------
#   Change PATH Variable
#   ------------------------------------------------------------

export PATH="/usr/local/bin:$PATH"
export PATH="/usr/local/sbin:$PATH"
